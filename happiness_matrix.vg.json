{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/kzho0015/FIT3179/main/2023Happiness.csv"},
    "title": {
      "text": "Matrix",
      "align": "center",
      "anchor": "middle"
    },
    "params": [
        {
        "name": "index_threshold",
        "value": 0,
        "bind": {
            "input": "range",
            "min": 0,
            "max": 7.8,
            "step": 0.05,
            "name": "Happiness Index: "
          }
        }
      ],
      "transform": [
        {"filter": "datum.Happiness_Index > index_threshold"}
      ],
    "repeat": {
      "row": ["Freedom to make life choices", "Generosity", "Perceptions of corruption"],
      "column": ["Freedom to make life choices", "Generosity", "Perceptions of corruption"]
    },
    "spec": {
      "mark": "circle",
      "params": [{
        "name": "view",
        "select": "interval",
        "bind": "scales"
      }],
      "encoding": {
        "x": {
          "field": {"repeat": "column"}, 
          "type": "quantitative",
          "scale": {"type": "linear"},
          "axis": {"tickCount": 4}
        },
        "y": {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "axis": {"tickCount": 4, "minExtent": 10}
        },
        "color": {
            "type": "nominal",
            "field": "Region",
            "title": "Region"
        },
        "size": {
          "field": "Happiness_Index",
          "type": "quantitative",
          "title": "Happiness Index",
          "scale": {
          "type": "threshold",
          "domain": [2.5, 4, 5, 6, 7.5],
          "range": [10, 30, 50, 90, 150, 250]
          },
          "legend": {"format": ".2s"}
        },
        "tooltip": [
          {
            "field": "Region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "Country name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Happiness_Index",
            "type": "quantitative",
            "title": "Happiness Index",
            "format": ".2f"
          },
          {
            "field": {"repeat": "row"},
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": {"repeat": "column"},
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  }  